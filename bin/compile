#!/usr/bin/env bash

function indent() {
  c='s/^/       /'
  case $(uname) in
  Darwin) sed -l "$c" ;;
  *) sed -u "$c" ;;
  esac
}

BUILD_DIR="$1"
SOURCE_DIR="$(dirname $0)/../fonts.tar.gz"
TARGET_DIR="$BUILD_DIR/.fonts"

echo "-----> Extracting fonts to $TARGET_DIR"

mkdir -p "$TARGET_DIR"
tar -xvzf "$SOURCE_DIR" -C "$TARGET_DIR" | indent

fc-cache -fv
